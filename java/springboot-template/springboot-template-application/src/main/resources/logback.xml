<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>

	<appender
		name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{60}%n\t%msg%n</pattern>
		</encoder>
	</appender>

	<logger
		name="org.hibernate.engine.jdbc.env.internal.LobCreatorBuilderImpl"
		level="warn" />

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>